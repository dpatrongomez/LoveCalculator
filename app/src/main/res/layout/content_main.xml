<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="es.dpatrongomez.lovecalculator.MainActivity"
    tools:showIn="@layout/activity_main">


    <EditText
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/female_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/female"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/male_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/male"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="@string/calculate" />

    <ImageView
        android:id="@+id/love"
        android:layout_width="wrap_content"
        android:layout_height="200dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/love"
        android:gravity="center"
        android:textColor="#ffff"
        android:textSize="30sp" />


</RelativeLayout>
